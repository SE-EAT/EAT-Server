extends base
block content
    div#kakaoMap
        if nickname == roomInfo.users[0].nickname
            iframe(src=`https://map.kakao.com/?sName=${roomInfo.users[0].address}&eName=${roomInfo.restaurant.name}`, width=800, height=600)
        else
            iframe(src=`https://map.kakao.com/?sName=${roomInfo.users[1].address}&eName=${roomInfo.restaurant.name}`, width=800, height=600, name="iframe")#guestMap
            
    div#users Users : 
        a(href="#none", onclick=`window.open("/users/${roomInfo.users[0]._id}", '_blank', 'width=300, height=300')`) #{roomInfo.users[0].nickname}
    br

    div#chat_list

    div
        form
            input(type="text", placeholder="message", required)
            button Send

    div
        form(method="POST")
            input(type="submit", value="Ready")
            
        

block scripts
    script(src="/socket.io/socket.io.js")
    script(src="/public/js/app.js")
    