extends base
block content
    form(method="POST")
        label(for="category")
        select(id="category", name="category")
            option 카테고리
            option(value="korea") 한식
            option(value="china") 중식
            option(value="japan") 일식
            option(value="western") 양식
            option(value="snack") 분식
            option(value="chicken") 치킨
            option(value="asian") 아시안
            option(value="meat") 고깃집
            option(value="drink") 술집
        label(for="hour")
        select(id="hour", name="hour")
            option 시
            option(value="1") 1
            option(value="2") 2
            option(value="3") 3
            option(value="4") 4
            option(value="5") 5
            option(value="6") 6
            option(value="7") 7
            option(value="8") 8
            option(value="9") 9
            option(value="10") 10
            option(value="11") 11
            option(value="12") 12
        label(for="minute")
        select(id="minute", name="minute")
            option 분
            option(value="00") 0
            option(value="10") 10
            option(value="20") 20
            option(value="30") 30
            option(value="40") 40
            option(value="50") 50
        input(type="submit", value="Next")






